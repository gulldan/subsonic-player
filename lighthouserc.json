{
  "ci": {
    "collect": {
      "startServerCommand": "bunx expo export --platform web && bun scripts/serve-dist.ts",
      "startServerReadyPattern": "Serving HTTP",
      "startServerReadyTimeout": 120000,
      "url": ["http://localhost:8081/"],
      "numberOfRuns": 3,
      "settings": {
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "maxWaitForLoad": 90000,
        "skipAudits": ["uses-http2", "uses-long-cache-ttl"],
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.45, "aggregationMethod": "median" }],
        "categories:accessibility": ["warn", { "minScore": 0.9, "aggregationMethod": "pessimistic" }],
        "categories:best-practices": ["warn", { "minScore": 0.7, "aggregationMethod": "pessimistic" }],
        "categories:seo": ["warn", { "minScore": 0.7, "aggregationMethod": "pessimistic" }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 18000, "aggregationMethod": "median" }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 35000, "aggregationMethod": "median" }],
        "total-blocking-time": ["warn", { "maxNumericValue": 5000, "aggregationMethod": "median" }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1, "aggregationMethod": "pessimistic" }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci/reports"
    }
  }
}
