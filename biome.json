{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "recommended"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImportCycles": "error"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "nursery": {
        "noLeakedRender": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!!dist",
      "!!node_modules",
      "!!.expo",
      "!!static-build",
      "!!server_dist",
      "!!test-results",
      "!!.lighthouseci",
      "!!.claude",
      "!*.config.js",
      "!babel.config.js",
      "!server/templates",
      "!tests",
      "!playwright.config.ts",
      "!.dependency-cruiser.js",
      "!lighthouserc.json",
      "!expo-env.d.ts"
    ]
  }
}
