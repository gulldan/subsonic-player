{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["app/**/*.{ts,tsx}", "scripts/*.{ts,js}"],
  "project": [
    "app/**/*.{ts,tsx}",
    "features/**/*.{ts,tsx}",
    "shared/**/*.{ts,tsx}",
    "server/**/*.ts",
    "scripts/**/*.{ts,js}"
  ],
  "ignore": ["drizzle.config.ts"],
  "drizzle": false,
  "ignoreDependencies": [
    "drizzle-kit",
    "drizzle-orm",
    "drizzle-zod",
    "@expo/ngrok",
    "@stardazed/streams-text-encoding",
    "@ungap/structured-clone",
    "babel-plugin-react-compiler",
    "expo-*",
    "react-native-*"
  ]
}
